INSTAGRAM_URL=https://instagram.com/kaptaze
TWITTER_URL=https://twitter.com/kaptaze
LINKEDIN_URL=https://linkedin.com/company/kaptaze

# Mobile App Configuration
ANDROID_APP_URL=https://play.google.com/store/apps/details?id=com.kaptaze
IOS_APP_URL=https://apps.apple.com/tr/app/kaptaze/id123456789

