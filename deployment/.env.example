# KapTaze Production Environment Variables
# .com.tr domain configuration

# Domain Configuration
DOMAIN=kaptazeapp.com.tr
FRONTEND_URL=https://kaptazeapp.com.tr
API_BASE_URL=https://api.kaptazeapp.com.tr
ADMIN_URL=https://admin.kaptazeapp.com.tr
RESTAURANT_URL=https://restoran.kaptazeapp.com.tr

# SSL Configuration
SSL_EMAIL=info@kaptazeapp.com.tr

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=super_secure_password_123
MONGO_DATABASE=kaptazeappv5

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_456

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_very_long_and_secure
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_very_long_and_secure

# İyzico Payment Configuration (Production)
IYZICO_API_KEY=your_production_iyzico_api_key
IYZICO_SECRET_KEY=your_production_iyzico_secret_key

# PayTR Payment Configuration (Production)
PAYTR_MERCHANT_ID=your_paytr_merchant_id
PAYTR_MERCHANT_KEY=your_paytr_merchant_key
PAYTR_MERCHANT_SALT=your_paytr_merchant_salt

# Firebase Configuration
FIREBASE_PROJECT_ID=kaptaze-app
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xyz@kaptaze-app.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_client_id

# React Firebase Config (JSON string)
REACT_APP_FIREBASE_CONFIG={"apiKey":"your_api_key","authDomain":"kaptaze-app.firebaseapp.com","projectId":"kaptaze-app","storageBucket":"kaptaze-app.appspot.com","messagingSenderId":"123456789","appId":"1:123456789:web:abcdef"}

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=noreply@kaptazeapp.com.tr
EMAIL_PASSWORD=your_app_specific_password

# SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Google Maps Configuration
REACT_APP_GOOGLE_MAPS_KEY=your_google_maps_api_key

# Cloudinary Configuration (File Storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=grafana_admin_password

# Backup Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=kaptaze-backups
BACKUP_RETENTION_DAYS=30

# Sentry Configuration (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://kaptazeapp.com.tr,https://www.kaptazeapp.com.tr,https://admin.kaptazeapp.com.tr,https://restoran.kaptazeapp.com.tr

# Session Configuration
SESSION_SECRET=your_session_secret_key

# Environment
NODE_ENV=production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/live/kaptazeapp.com.tr/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/live/kaptazeapp.com.tr/privkey.pem

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CDN Configuration
CDN_URL=https://cdn.kaptazeapp.com.tr

# Cache Configuration
CACHE_TTL=3600

# Turkish Locale Settings
LOCALE=tr-TR
TIMEZONE=Europe/Istanbul
CURRENCY=TRY

# Business Configuration
COMPANY_NAME=KapTaze
COMPANY_ADDRESS=Antalya, Türkiye
COMPANY_PHONE=+90 242 XXX XX XX
COMPANY_EMAIL=info@kaptazeapp.com.tr
TAX_NUMBER=1234567890
TRADE_REGISTRY_NUMBER=12345

# Legal Configuration
TERMS_URL=https://kaptazeapp.com.tr/kullanim-kosullari
PRIVACY_URL=https://kaptazeapp.com.tr/gizlilik-politikasi
COOKIE_URL=https://kaptazeapp.com.tr/cerez-politikasi

# Social Media
