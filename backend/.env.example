# KAPTAZEAPPV5 Environment Variables
# Bu dosyayı .env olarak kopyalayın ve kendi değerlerinizi girin

# Veritabanı
MONGODB_URI=mongodb://localhost:27017/kaptazeappv5

# JWT Secret
JWT_SECRET=super_gizli_jwt_anahtari_buraya_yazin

# Server
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Cloudinary (Resim Upload)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email (Bildirimler için)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Ödeme Entegrasyonu
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key
IYZICO_BASE_URL=https://api.iyzipay.com

PAYTR_MERCHANT_ID=your_paytr_merchant_id
PAYTR_MERCHANT_KEY=your_paytr_merchant_key
PAYTR_MERCHANT_SALT=your_paytr_merchant_salt

# Push Notification
FCM_SERVER_KEY=your_fcm_server_key

# Diğer
ADMIN_EMAIL=admin@kaptazeapp.com
ADMIN_PASSWORD=guclu_admin_sifresi