# KapTaze Backend API Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://kaptaze:KapTaze2025@kaptaze-cluster.xxxxx.mongodb.net/kaptazedb?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URLS=http://localhost:3000,https://kaptaze.com,https://kaptaze.netlify.app

# Email Configuration (SendGrid/Resend)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@kaptaze.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info